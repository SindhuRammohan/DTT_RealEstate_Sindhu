<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealEstate_DTT_Sindhu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

    </style>
    <style name="TextAppearance.AppCompat.title1" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="TextAppearance.AppCompat.title2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16dp</item>

    </style>
    <style name="TextAppearance.AppCompat.title3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextAppearance.AppCompat.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/book</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextAppearance.AppCompat.input" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/light</item>
        <item name="android:textSize">12dp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>
    <style name="TextAppearance.AppCompat.hint" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/book</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextAppearance.AppCompat.subtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/book</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="TextAppearance.AppCompat.detail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/book</item>
        <item name="android:textSize">12dp</item>
    </style>
